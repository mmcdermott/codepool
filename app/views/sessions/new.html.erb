<h1>Sign in</h1>

<form accept-charset="UTF-8" action="/sessions" method="post" id='signin'>
  <div class="field">
    <label for="session_email">Email</label>
    <input id="session_email" name="session[email]" size="30" type="text" />
  </div>
  <div class="field">
    <label for="session_password">Password</label>
    <input id="session_password" name="session[password]" size="30" type="password" />
  </div>
  <div class="actions">
    <input name="commit" type="submit" value="Sign in" class="btn primary"/>
  </div>
</form>

<p>New user? <%= link_to "Sign up now!", sign_up_path %></p>

