<body>

<!--header_top_bg starts-->
<div id="header_top_bg">
  <div id="header_top">
    <p>when you can't wait for code</p>
    <p class="tel">contribute to open source requests</p>
    <div class="clear"></div>
  </div>
</div>
<!--header_top_bg ends--> 

<!--header_bg starts-->
<div id="header_bg"> 
  
  <!--header_divider starts-->
  <div id="header_divider"></div>
  <!--header_divider ends--> 
  
  <!--header starts-->
  <div id="header"> 
    
    <!--logo starts-->
    <div class="logo"> <img src="assets/landing/codepoollogo-sm.png" alt="logo"> </div>
    <!--logo ends--> 
    
    <!--tagline starts-->
    <div class="tagline">
      <%= yield %>
    </div>
    <!--tagline ends-->
    
    <div class="clear"></div>
  </div>
  <!--header ends--> 
</div>
<!--header_bg ends--> 


<!--footer_bg starts-->
<div id="footer_bg">
  <div id="footer"> 
    
    <!--copyright starts-->
    <div class="copyright">
      <p>&copy; 2011 codepool.org</p>
      <ul>
<!--
        <li><a href="#">Terms</a></li>
        <li><a href="#">Privacy policy</a></li>
-->
      </ul>
    </div>
    <!--copyright ends--> 
    
    <!--social starts-->
    <ul class="social">
      <li><a href="http://twitter.com/codepoolorg" title="Twitter"><img src="/assets/landing/twitter.png" width="24" height="24" alt="twitter" /></a></li>

    </ul>
    <!--social ends-->
    
    <div class="clear"></div>
  </div>
</div>
<!--footer_bg ends--> 


