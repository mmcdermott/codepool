<div class="topbar">
  <div class="topbar-inner">
    <div class="container">
      <%= link_to image_tag("codepoollogo-sm.png", :id=>"header_image"), root_url %>


      <%= form_tag projects_path, :method => 'get', :class => 'pull-left', :id => 'header_search' do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil %>
      <% end %>
      <ul class="nav" id="header_nav">
        <li ><%= link_to "Browse Requests", root_url %></li>
        <li><%= link_to "About", '/about' %></li>
        <li><%= link_to "FAQ", '/faq' %></li>
        <li><%= link_to "Contact", '/contact' %></li>
        <% if current_user.nil? %>
          <li id="profileLink"> <%= link_to "Login", sign_in_path %></li>
          <li id="profileLink"><%= link_to "Register", sign_up_path %></li>
        <% else %>
          <li><%= link_to current_user.name, current_user %></li>
          <li><%= link_to "Sign Out", sign_out_path   %> </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
