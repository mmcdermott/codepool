<section id="homeIntro">
  <div id="introVideo">

  </div>
  <div id="introText">
    <h2>Sponsor Open Source Requests!</h2>
    <p>1000 companies pledged including:</p>
    <ul>
      <li>Google</li>
      <li>IBM</li>
      <li>Oracle</li>
      <li>Qualcomm</li>
      <li>Codepool</li>
    </ul>
  </div>
</section>
<header id="requestListHeader">
  <%= form_tag requests_path, :method => 'get', :class => '', :id => 'requestSearch' do %>
    <%= label_tag 'searchField', 'Search' %>
    <%= text_field_tag :search, params[:search], :id => 'searchField', :placeholder => 'Search Requests' %>
    <% submit_tag "Search", :name => nil %>
  <% end %>
</header>

<section id="requestList">
  <%= render "components/request_list", { :requests => @requests.funded} %>
</section>

<section id="sideBar">
  <h4>Request Tags</h4>
  <%= render 'components/tag_cloud', { :tagged => Request }%>
</section>
