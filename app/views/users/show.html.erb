<% if params['created'] %>
  <h2>Welcome to codepool!</h2>
<% end %>


<%= image_tag user_pic(@user), :width => "80px" %>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>
<p>
  <b>Type:</b>
  <%= (@user.company ? "Company" : "Individual") unless @user.company.nil? %>
</p>
<p>
  <b>Email:</b>
  <%= @user.email %>
</p>
<p>
  <b>Description:</b>
  <%= @user.description %>
</p>
<table >
  <tr>
    <td> Total Bounty </td> 
    <td> <%= "#{@user.name}'s Donation" %> </td> 
    <td> Post Date </td> 
    <td> Deadline </td> 
  </td>
    
    <% @donations.each do |donation| %>
  <tr>
    <td> <%= donation.amount %> </td>
    <td> <%= donation.request.title %> </td>
    <td><%= donation.amount %></td>
    <td> <%= donation.created_at %></td>
</tr>
<% end %> 
</table

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
