<div class="navbar">
  <div class="navbar-inner">
    <div class="container" style="width:auto">
      <%= form_tag requests_path, :method => 'get', :class => 'navbar-search pull-left', :id => 'requestSearch' do %>
        <%= text_field_tag :search, params[:search], :class => "search-query", :id => 'searchField', :placeholder => 'Search Requests' %>
        <% submit_tag "Search", :name => nil %>
      <% end %>
      <ul class="nav">
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Sort By <b class="caret"></b> </a>
        <ul class="dropdown-menu">
          <li>   <%= link_to "Recent", requests_path(:order => "recent") %> </li>
          <li> <%= link_to "Highest Bounty", requests_path(:order => "most_expensive") %> </li>.
          <li> <%= link_to "Lowest Bounty", requests_path(:order => "least_expensive") %> </li>.
        </ul>
        </li>
      </ul>
    </div>
  </div>
</div>


