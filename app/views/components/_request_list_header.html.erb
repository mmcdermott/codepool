  <%= form_tag requests_path, :method => 'get', :class => '', :id => 'requestSearch' do %>
    <%= label_tag 'searchField', 'Search' %>
    <%= text_field_tag :search, params[:search], :id => 'searchField', :placeholder => 'Search Requests' %>
    <% submit_tag "Search", :name => nil %>
    <%= link_to "recent", requests_path(:order => "recent") %>
    <%= link_to "Highest Bounty", requests_path(:order => "most_expensive") %>
    <%= link_to "Lowest Bounty", requests_path(:order => "least_expensive") %>
  <% end %>

